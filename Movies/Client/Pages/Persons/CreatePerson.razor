@page "/users/create"
@inject IPersonRepository personRepository

<h3>Create Person</h3>

<PersonForm Person="Person" OnValidSubmit="Create" />

@code { Person Person = new Person();

    private void Create()
    {
        try
        {
            personRepository.CreatePerson(Person);
            navigationManager.NavigateTo("people");

        }
        catch (Exception)
        {

            throw;
        }
    } }